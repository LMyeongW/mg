<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">

   <!-- The definition of the Root Spring Container shared by all Servlets and Filters -->
   <context-param>
       <param-name>contextConfigLocation</param-name>
       <param-value>classpath*:spring/context-*.xml</param-value> <!-- 리소스안에 스프링폴더안에있는 콘텍스트-* 로 시작하는 파일모두 읽겟다 -->
    </context-param>
 
    <!-- Creates the Spring Container shared by all Servlets and Filters -->
   <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
 
    <!-- Processes application requests -->
    <servlet>
        <servlet-name>appServlet</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>
            	classpath*:spring/appServlet/*-servlet.xml
            	classpath*spring/appServlet/security-context.xml
            </param-value> <!-- classpath가 resource 자칭  앱서블렛 안에 *-서블렛 파일을 모두읽겟다  -->
        </init-param>
        <load-on-startup>1</load-on-startup>
        
            	<!-- 업로드 관련 설정 -->
		<multipart-config>
			<location>C:\\upload\\temp</location>		
			<max-file-size>20971520</max-file-size>					<!-- 1MB * 20 -->
			<max-request-size>41943040</max-request-size>			<!-- 40MB -->
			<file-size-threshold>20971520</file-size-threshold>		<!-- 20MB -->
		</multipart-config>
        
    </servlet>
        
    <servlet-mapping>
        <servlet-name>appServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    

    
    <!-- 시작페이지 설정 -->
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list> 
	
	<!-- 한글인코딩 UTF-8 설정 -->
	<filter>
        <filter-name>encodingFilter</filter-name>
	    <filter-class>
	            org.springframework.web.filter.CharacterEncodingFilter
	    </filter-class>
	    
	    <init-param>
	        <param-name>encoding</param-name>
	        <param-value>utf-8</param-value>
	    </init-param>
    </filter>
    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
    </filter-mapping>
    


	
	
 </web-app>